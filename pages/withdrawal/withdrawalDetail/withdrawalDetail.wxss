.with-detail-item {
  background: #fff;
  padding: 12rpx 32rpx 64rpx;
}
.with-detail-item > h2 {
  height: 80rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #000000;
  line-height: 80rpx;
}
.with-detail-item > text {
  display: block;
  height: 48rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #5E5E5E;
  line-height: 48rpx;
}
.with-detail-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 144rpx;
  background: #FFFFFF;
  border: 2rpx solid #BDBDBD;
  position: fixed;
  bottom: 0;
}
.with-detail-footer .with-detail-btn {
  width: 182rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: #303133;
  line-height: 78rpx;
  margin-right: 16rpx;
  text-align: center;
}
.with-detail-footer .with-btn-pass {
  background: #398BFB;
  border-radius: 8rpx;
  color: #fff;
}
