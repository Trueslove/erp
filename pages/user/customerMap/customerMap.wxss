/* pages/user/customerMap/customerMap.wxss */
.page-body,.page-section{
  width: 100%;
  margin: 0 auto;
  padding: 0;
}
.page-section-gap{
  box-sizing: border-box;
  /* padding: 0 30rpx; */
}

.page-body-button {
  margin-bottom: 30rpx;
}

.customCallout {
  box-sizing: border-box;
  background-color: #398BFB; 
  display: inline-flex;
  padding:20px;
  border: 1px solid #398BFB;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
  color:#fff;
  font-size: 14px;
}
.icon {
  width: 16px;
  height: 16px;
}

.content {
  flex: 0 1 auto;
  margin: 0 auto;
  font-size: 14px;
  font-weight: 500;
  color: #fff;
}
.customer_view{
  margin: 0 auto;
  text-align: center;
  position: relative;
}
.customer_info_head{
  margin: 0 auto;
  text-align: center;
  width: 100%;
  border-bottom: 1px solid #F8F8F8;
  padding-top: 19px;
  padding-bottom: 18px;
  margin-bottom: 17px;
}
.customer_view label{
  font-size: 20px;
  color: #303133;
  font-weight: 500;
}
.customer_view image{
  height: 14px;
  width: 13px;
  display: inline-block;
  float: right;
  margin-right: 12px;
  margin-top: 4px;
}
.customer-info {
  flex: 1;
  background: #fff;
  width: 100%;
  height: 93px;
  display: flex;
  align-items: center;
  padding-left: 26rpx;
  margin-bottom: 4px;
  text-align: left;
}
.customer-info .customer-info-img {
  width: 57px;
  height: 57px;
  background: #D8D8D8;
  border-radius: 50%;
  object-fit: cover;
}
.customer-info .customer-info-right .customer-info-title {
  font-size: 16px;
  color: #303133;
  line-height: 44rpx;
}
.customer-info .customer-info-right .customer-info-text {
  font-size: 14px;
  color: #909399;
}
